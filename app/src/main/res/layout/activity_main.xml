<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/branco2"
    tools:context=".epicuro.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="126dp"
        android:layout_height="177dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/epikouros" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="262dp"
        android:layout_height="42dp"
        android:layout_marginTop="12dp"
        android:text="Epicuro"
        android:textAlignment="center"
        android:textColor="#272B41"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="360dp"
        android:layout_height="148dp"
        android:layout_marginTop="8dp"
        android:text="O paradoxo questiona como a existência de um deus que é simultaneamente onipotente, onisciente e benevolente pode ser reconciliada com a presença do mal e do sofrimento no mundo. Se um deus assim existisse, a lógica sugere que o mal não deveria existir. Portanto, o paradoxo desafia a compatibilidade entre as características atribuídas a Deus e a realidade do sofrimento humano."
        android:textAlignment="center"
        android:textColor="#101010"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="313dp"
        android:layout_height="41dp"
        android:layout_marginTop="20dp"
        android:text="O Paradoxo de Epicuro "
        android:textAlignment="center"
        android:textColor="#272B41"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView6" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:backgroundTint="#3F51B5"
        android:onClick="goToSecondActivity"
        android:text="Continuar"
        android:textAlignment="center"
        android:textColor="#FBF9F9"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="361dp"
        android:layout_height="82dp"
        android:layout_marginTop="24dp"
        android:text="Epicuro viveu entre 341 a.C. e 270 a.C., e suas ideias sobre o problema do mal, embora datem desse período, foram mais tarde formuladas em termos mais precisos por filósofos posteriores."
        android:textAlignment="center"
        android:textColor="#101010"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.506"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="271dp"
        android:layout_height="22dp"
        android:layout_marginTop="32dp"
        android:autoLink="web"
        android:lineSpacingExtra="5sp"
        android:linksClickable="true"
        android:text="Desenvolvido por Lennon Moreira"
        android:textAlignment="textStart"
        android:textColor="#3F51B5"
        android:textColorLink="@color/blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.786"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="34dp"
        android:layout_height="27dp"
        android:layout_marginTop="28dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.171"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        app:srcCompat="@drawable/logo" />


</androidx.constraintlayout.widget.ConstraintLayout>